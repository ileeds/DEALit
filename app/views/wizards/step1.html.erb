<ol class="breadcrumb">
  <li class='active'>Step 1</li>
  <li>Step 2</li>
  <li>Step 3</li>
  <li>Step 4</li>
</ol>

<%= form_for @home_wizard, as: :home_wizard, url: validate_step_wizard_path do |form| %>
  <% if @home_wizard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@home_wizard.errors.count, "error") %> prohibited this home from being saved:</h2>
      <ul>
      <% @home_wizard.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag :current_step, 'step1' %>
  <div class = "row" >
    <div class = "col-sm-2">
    <div class="field">
      <%= form.label :address %>
      <%= form.text_field :address, id: :home_address %>
    </div>
  </div>
  <div class = "col-sm-2">
  </div>
  <div class = "col-sm-2">
    <div class="field">
      <%= form.label :price %>
      <%= form.text_field :price, id: :home_price %>
    </div>
  </div>
  </div>
  <div class = "row" >
    <div class = "col-sm-2">
    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description, id: :home_description %>
    </div>
  </div>
  <div class = "col-sm-2">
  </div>
  <div class = "col-sm-2">
    <div class="field">
      <%= form.label :size %>
      <%= form.number_field :size, id: :home_size %>
    </div>
  </div>
  </div>

  <%= form.submit 'Continue' %>
<% end %>
