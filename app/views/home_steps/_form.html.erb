<div class="form-container">
  <%= bootstrap_form_for @home, url: wizard_path, :html => { :multipart => true }, class: "center", id: "form_ajax" do |form| %>
    <% if @home.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@home.errors.count, "error") %> prohibited this home from being saved:</h2>
        <ul>
        <% @home.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= hidden_field_tag :home_id, @home.id %>

    <%= yield form %>

    <div class="actions">
      <%= form.submit "Continue" %>
    </div>
  <% end %>
</div>
