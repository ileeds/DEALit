<div id="filterrific_results">
  <div>
    <%= page_entries_info homes %>
  </div>
  <% @homes.each do |home| %>
    <div class="home-wrapper">
      <div class="home-photo-gallery">
        <%= render(
          partial: 'layouts/image_carousel',
          locals: { home: home }
        ) %>
      </div>
      <%= link_to home, remote: true, class: "home-link" do %>
        <%= render(
          partial: 'homes/home_container',
          locals: { home: home }
        ) %>
      <% end %>
      <div class="home-buttons">
        <div class="send-message">
          <%= link_to "Send Message", private_topic_path(recipient_id: home.user_id, home_address: home.address), class: "btn btn-success home-button send" %>
        </div>
        <div class="get-notifications">
          <%= link_to "Get Notifications", followings_path(:following => { home_id: home.id } ), method: 'post', class: "btn btn-success home-button notify"%>
        </div>
      </div>
    </div>
  <% end %>
  <%= will_paginate @homes, remote: true %>
  <br>
</div>
<%= render "layouts/modal" %>
