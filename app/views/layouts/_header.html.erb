<header class="navbar navbar-fixed-top">
  <div class="container">
    <div class="row">
      <%= link_to root_path, class:"logo-link" do %>
        <div class="col-sm-1">
          <%=image_tag "home.png", alt:"Home logo", class:"logo"%>
        </div>
        <div class="col-sm-5">
          <span id="logo"> Off Campus </span>
        </div>
      <% end %>
      <div>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Find a Home",  root_path, class:"logo-link" %></li>
            <li><%= link_to "Post a Home", step1_wizard_path, class:"logo-link" %></li>
            <% if logged_in? %>
              <li><%= link_to "Inbox", conversations_path, class:"logo-link" %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle logo-link" data-toggle="dropdown">
                  ME <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Notifications", '#', class:"logo-link" %></li>
                  <li><%= link_to "My Homes", current_user, class:"logo-link" %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user), class:"logo-link" %></li>
                  <li><%= link_to "Saved Searches", searches_path, class:"logo-link" %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Log out", logout_path, method: :delete, class:"logo-link" %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Log in", login_path, class: "btn btn-lg btn-primary logo-link" %></li>
              <li><%= link_to "Sign up", signup_path, class: "btn btn-lg btn-primary logo-link" %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
